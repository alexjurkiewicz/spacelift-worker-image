{
    "agent": {
        "logfile": "/opt/aws/amazon-cloudwatch-agent/logs/amazon-cloudwatch-agent.log",
        "metrics_collection_interval": 60,
        "run_as_user": "root"
    },
    "metrics": {
        "namespace": "SpaceliftWorkerImage",
        "metrics_collected": {
            "disk": {
                "resources": ["/", "/tmp"],
                "measurement": [
                    {
                        "name": "free",
                        "rename": "DISK_FREE",
                        "unit": "Gigabytes"
                    },
                    "total",
                    "used"
                ],
                "ignore_file_system_types": ["sysfs", "devtmpfs"]
            },
            "swap": {
                "measurement": [
                    "swap_used",
                    "swap_used_percent"
                ]
            },
            "mem": {
                "measurement": [
                    "mem_used",
                    "mem_buffered",
                    "mem_cached",
                    "mem_total"
                ]
            },
            "processes": {
                "measurement": [
                    "running",
                    "sleeping",
                    "dead"
                ]
            }
        },
        "append_dimensions": {
            "InstanceId": "${aws:InstanceId}",
            "AutoScalingGroupName": "${aws:AutoScalingGroupName}"
        },
        "aggregation_dimensions": [
            []
        ]
    },
    "logs": {
        "logs_collected": {
            "files": {
                "collect_list": [
                    {
                        "file_path": "/var/log/spacelift/error.log",
                        "log_group_name": "/spacelift-worker-image/spacelift-errors.log",
                        "log_stream_name": "{instance_id}-{ip_address}",
                        "timezone": "UTC",
                        "retention_in_days": 7
                    },
                    {
                        "file_path": "/var/log/spacelift/info.log",
                        "log_group_name": "/spacelift-worker-image/spacelift-info.log",
                        "log_stream_name": "{instance_id}-{ip_address}",
                        "timezone": "UTC",
                        "retention_in_days": 7
                    },
                    {
                        "file_path": "/opt/aws/amazon-cloudwatch-agent/logs/amazon-cloudwatch-agent.log",
                        "log_group_name": "/spacelift-worker-image/amazon-cloudwatch-agent.log",
                        "log_stream_name": "{instance_id}-{ip_address}",
                        "timezone": "UTC",
                        "retention_in_days": 7
                    }
                ]
            }
        }
    }
}
